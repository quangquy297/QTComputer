@model QTComputer.Models.Page
@{
    ViewData["Title"] = "Chi tiết Page :" + Model.PageName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminPages" asp-action="Index" class="breadcrumb-item">Danh sách Page</a>
            <span class="breadcrumb-item active">Thông tin Page : @Model.PageName</span>
        </nav>
    </div>
</div>

<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height:70px; width:70px">
                <img src="~/images/pages/@Model.Thumb" alt="@Model.Title" />
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.PageName</h4>
                <p class="text-muted m-b-0">ID: #@Model.PageId</p>
            </div>
        </div>
        <div class="m-b-15">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminPages" asp-action="Edit" asp-route-id="@Model.PageId">Edit</a>
        </div>
    </div>
</div>
<form asp-controller="AdminProducts" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">

        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Page Images</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>Tên Page:</td>
                            <td>@Model.PageName</td>
                        </tr>
                        <tr>
                            <td>Mô tả:</td>
                            <td>@Model.Contents</td>
                        </tr>
                        <tr>
                            <td>Alias:</td>
                            <td>@Model.Alias</td>
                        </tr>
                        <tr>
                            <td>Trạng thái:</td>
                            <td>
                                @if (@Model.Published)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="badge badge-success badge-dot m-r-10"></div>
                                        <div>Active</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="badge badge-danger badge-dot m-r-10"></div>
                                        <div>Non-Active</div>
                                    </div>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Ngày tạo:</td>
                            <td>@Model.CreatedDate</td>
                        </tr>
                        <tr>
                            <td>Ordering:</td>
                            <td>@Model.Ordering</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <img class="img-fluid" src="~/images/pages/@Model.Thumb" alt="@Model.Title" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Quay Lại</a>
</div>

@section Scripts{
        <script src="~/Adminassets/vendors/select2/select2.min.js"></script>
        <script src="~/Adminassets/js/pages/e-commerce-product-edit.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
        <script src="~/Adminassets/summernote/summernote-bs4.js"></script>
}

