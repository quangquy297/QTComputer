@model QTComputer.Models.Account

@{
    ViewData["Title"] = "CHI TIẾT TÀI KHOẢN";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index" class="breadcrumb-item">Danh sách tài khoản</a>
            <span class="breadcrumb-item active">Chi tiết tài khoản</span>
        </nav>
    </div>
</div>
<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">

        </div>
        <div class="m-b-15">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@Model.AccountId">Edit</a>
        </div>
    </div>
</div>
<div class="card-body">
    <h4 class="card-title">Thông tin tài khoản</h4>
    <div class="table table-hover">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.AccountId</td>
                </tr>
                <tr>
                    <td>Họ tên:</td>
                    <td class="text-dark font-weight-semibold">@Model.FullName</td>
                </tr>
                <tr>
                    <td>Điện thoại:</td>
                    <td class="text-dark font-weight-semibold">@Model.Phone</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td class="text-dark font-weight-semibold">@Model.Email</td>
                </tr>
                <tr>
                    <td>Vai trò:</td>
                    <td class="text-dark font-weight-semibold">@Model.Role.RoleName</td>
                </tr>

                <tr>
                    <td>Active</td>
                    <td>@Html.DisplayFor(model => model.Active)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>