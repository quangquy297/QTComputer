@model QTComputer.Models.News
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = $"/tin-tuc/{Model.Title}-{Model.PostId}";
}
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/assets/images/slider/bg/bg1.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h1 style="color:aliceblue" class="breadcrumb-heading">@Model.Title</h1>
                        <ul>
                            <li>
                                <a style="color:aliceblue" href="/">Trang chủ <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li style="color:aliceblue">@Model.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="blog-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog-detail-item">
                        <div class="blog-img">
                            <img class="img-full" src="~/images/news/@Model.Thumb" alt="@Model.Title">
                        </div>
                        <div class="blog-content text-start pb-0">
                            <div class="blog-meta text-dim-gray pb-3">
                                <ul>
                                    <li class="date"><i class="fa fa-calendar-o me-2"></i>@Model.CreatedDate</li>
                                    <li>
                                        
                                    </li>
                                </ul>
                            </div>
                            <h5 class="title mb-4">
                                <a href="@url">@Model.Title</a>
                            </h5>
                            @Html.Raw(Model.Contents)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>